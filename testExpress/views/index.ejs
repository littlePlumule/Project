<h1>簡易會員系統</h1>
<% if(username) {%>
    Hello,
    <%= username %>
        <a href="/logout">登出</a>
        <form method="POST" action="/comment">
            <textarea name="content"></textarea>
            <input type="submit" />
        </form>
        <% }else{ %>
            <a href="/register">註冊</a>
            <a href="/login">登入</a>
            <% } %>

                <% comments.forEach(function(comment) {%>
                    <div>
                        <h2>
                            <%= comment.nickname %>
                        </h2>
                        <p>
                            <%= comment.content %>
                        </p>
                        <% if(username === comment.username){ %>
                            <a href="/delete_comments/<%= comment.id %> ">刪除</a>
                            <% } %>
                    </div>
                    <% }) %>